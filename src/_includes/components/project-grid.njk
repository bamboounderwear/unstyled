<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-fluid-3">
  {% for project in componentData.projects %}
    <a href="{{ project.url }}" class="group">
      <div class="bg-white border border-gray-200">
        <img src="{{ project.image }}" alt="{{ project.title }}" class="w-full h-48 object-cover">
        <div class="p-fluid-3">
          <h3 class="group-hover:text-gray-900">{{ project.title }}</h3>
          <p class="text-gray-600 mt-2">{{ project.description }}</p>
        </div>
      </div>
    </a>
  {% endfor %}
</div>