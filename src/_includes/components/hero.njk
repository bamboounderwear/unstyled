<section class="w-full relative py-fluid-5">
  <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('{{ componentData.backgroundImage | default('/images/hero-bg.jpg') }}');">
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  </div>
  <div class="container mx-auto px-fluid-3 text-center relative z-10">
    <h1 class="text-white">{{ componentData.title }}</h1>
    {% if componentData.subtitle %}
      <p class="text-fluid-lg text-gray-300 mt-fluid-2">{{ componentData.subtitle }}</p>
    {% endif %}
  </div>
</section>