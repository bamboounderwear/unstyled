<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | Portfolio</title>
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
  <link rel="stylesheet" href="/styles/main.css">
  <style>
    #mobileMenu.show ul {
      display: block;
    }
  </style>
</head>
<body class="min-h-screen bg-gray-50">
  <header class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 z-50">
    {% include "components/navigation.njk" %}
  </header>

  <main class="container mx-auto px-fluid-3 py-fluid-4 mt-[60px]">
    <div class="space-y-fluid-5">
      {% for component in components %}
        {% set componentData = component.data %}
        {% include "components/" + component.type + ".njk" %}
      {% endfor %}
    </div>
  </main>

  <footer class="bg-gray-900 text-gray-200 mt-auto">
    <div class="container mx-auto px-fluid-3 py-fluid-4">
      <p>&copy; {{ page.date.getFullYear() if page.date else "2025" }} Portfolio. All rights reserved.</p>
    </div>
  </footer>

  <script>
    document.getElementById('menuButton').addEventListener('click', function() {
      const menuText = this.querySelector('.menu-text');
      const menuIcon = this.querySelector('.menu-icon');
      menuIcon.textContent = menuIcon.textContent === '+' ? 'x' : '+';
      const mobileMenu = document.getElementById('mobileMenu');
      mobileMenu.classList.toggle('show');
    });
  </script>
</body>
</html>